#include <iostream>
#include <iomanip>

using namespace std;

double fd(double f) {
    return (f - 32) * 5.0 / 9.0;
}

double cd(double c) {
    return c * 9.0 / 5.0 + 32;
}

int main() {
    int choice;

    cout << "선택하세요 (1: 화씨->섭씨, 2: 섭씨->화씨) ==> ";
    cin >> choice;

    if (choice == 1) {
        double f;
        cout << "화씨온도 입력: ";
        cin >> f;

        double c = fd(f);
        cout << fixed;
        cout.precision(5);
        cout << "섭씨온도는 " << c << " 입니다." << endl;
    }
    else if (choice == 2) {
        double c;
        cout << "섭씨온도 입력: ";
        cin >> c;

        double f = cd(c);
        cout << fixed;
        cout.precision(5);
        cout << "화씨온도는 " << f << " 입니다." << endl;
        }
        else {
            cout << "1, 2 중에 하나를 입력하세요." << endl;
        }

        return 0;
}
